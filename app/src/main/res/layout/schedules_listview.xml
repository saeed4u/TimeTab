<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    android:background="@color/transparent_background" >

    <View
        android:layout_width="20dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/schedule_color"
        android:background="@color/yellow" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/schedule_color"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/schedule_coursename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_name"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/schedule_coursetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_time"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/schedule_courselocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_location"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>